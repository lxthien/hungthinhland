        {% for blockOnHomepage in blocksOnHomepage %}
            {% if blockOnHomepage.category.getId() != 10 and blockOnHomepage.category.getId() != 11 and blockOnHomepage.category.getId() != 12 %}
                <div class="wrapper-container-item">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 title-list-news-items">
                                <p class="text-uppercase p-title-news-items">
                                    <img alt="{{ blockOnHomepage.category.getName() }}" src="{{ asset('assets/images/logo-icon.png') }}" width="35" height="25">
                                    <i class="fa fa-angle-right"></i>
                                    <a href="{{ path('news_category', {'level1': blockOnHomepage.category.getUrl() }) }}" title="{{ blockOnHomepage.category.getName() }}">{{ blockOnHomepage.category.getName() }}</a>
                                </p>
                                <span class="block-underline"></span>
                                <p>{{ blockOnHomepage.description }}</p>
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs nav-tabs-sub-cat" role="tablist">
                                    {% for listSubTab in blockOnHomepage.listSubTabs %}
                                        <li role="presentation" {{ loop.index == 1 ? 'class="active"' : '' }}><a href="#tab_{{ listSubTab.getId() }}" role="tab" data-toggle="tab">{{ listSubTab.getName() }}</a></li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <!-- Tab panes -->
                            <div class="tab-content">
                                {% for listSubTab in blockOnHomepage.listSubTabs %}
                                    <div role="tabpanel" class="tab-pane {{ loop.index == 1 ? 'active' : '' }}" id="tab_{{ listSubTab.getId() }}">
                                        <div class="col-md-12 list-news-items">
                                            <div class="row">
                                                {% for row in blockOnHomepage.posts %}
                                                    {{ include('news/components/itemsGridHomepage.html.twig') }}
                                                    {{ include('news/components/itemsGridHomepage.html.twig') }}
                                                    {{ include('news/components/itemsGridHomepage.html.twig') }}
                                                    {{ include('news/components/itemsGridHomepage.html.twig') }}
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="wrapper-container-item project-hot">
                    <div class="container">
                        <div class="row project-hot">
                            <div class="col-md-12 title-list-news-items">
                                <p class="text-center text-uppercase p-title-news-items">
                                    <img alt="{{ blockOnHomepage.category.getName() }}" src="{{ asset('assets/images/icon-logo.png') }}" width="30" height="25" />
                                    <i class="fas fa-angle-right"></i>
                                    <a href="{{ path('list_category', {'level1':'du-an', 'level2': blockOnHomepage.category.getUrl() }) }}" title="Dự án {{ blockOnHomepage.category.getName() }}">Dự án {{ blockOnHomepage.category.getName() }}</a>
                                </p>
                                <span class="text-center block-underline"></span>
                                <p>{{ blockOnHomepage.description }}</p>
                            </div>

                            <div class="clearfix"></div>

                            <div class="list-news-items">
                                <div class="bxslider">
                                    {% for row in blockOnHomepage.posts %}
                                        {{ include('news/components/itemsGridSlide.html.twig') }}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}

        <div class="row hidden">
            <div class="col-md-12 title-list-news-items">
                <h1 class="text-center text-uppercase">Dự toán chi phí xây dựng</h1>
                <span class="text-center block-underline"></span>
                <p>Dễ dàng dự toán chi phí trước khi xây dựng nhà cùng công ty Xây Dựng Minh Duy</p>
            </div>
            <div class="col-md-12">
                {{ render(controller(
                    'AppBundle:News:caculatorCostConstruction', {type: 'page'}
                )) }}
            </div>
        </div>
    </div>
{% endblock %}