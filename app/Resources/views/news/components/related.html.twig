{% if relatedNews|length > 0 %}
    <div class="related-news">
        <h3>{{ 'news.news_related'|trans }}</h3>
        <div class="row">
            {% for row in relatedNews %}
                <div class="col-xs-12 col-sm-4 col-md-3">
                    <div class="related-wrapper">
                        <div class="related-img">
                            <img
                                width="212"
                                height="150"
                                class="img-thumbnail lazyload"
                                src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
                                data-src="{{ (vich_uploader_asset(row, 'imageFile') ? vich_uploader_asset(row, 'imageFile') : asset('assets/images/no-image.png')) | imagine_filter('news_406_280') }}"
                                alt="{{row.getTitle()}}" >

                            {% if category is defined %}
                                <a title="{{ row.getTitle() }}" href="{{ path('news_show', {'slug': row.getUrl(), 'cat': category.getUrl() }) }}">
                                    <i class="fa fa-link"></i>
                                </a>
                            {% else %}
                                <a title="{{ row.getTitle() }}" href="{{ path('news_show', {'slug': row.getUrl() }) }}">
                                    <i class="fa fa-link"></i>
                                </a>
                            {% endif %}
                        </div>
                        {% if category is defined %}
                            <a class="related-title text-center" href="{{ path('news_show', {'slug': row.getUrl(), 'cat': category.getUrl() }) }}" title="{{ row.getTitle() }}">
                                <span>{{ row.getTitle() }}</span>
                            </a>
                        {% else %}
                            <a class="related-title text-center" href="{{ path('news_show', {'slug': row.getUrl() }) }}" title="{{ row.getTitle() }}">
                                <span>{{ row.getTitle() }}</span>
                            </a>
                        {% endif %}
                        <p>{{ row.getDescription()|slice(0, 85) }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="clearfix"></div>
{% endif %}